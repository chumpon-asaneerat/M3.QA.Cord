<UserControl x:Class="M3.QA.Pages.DIPSolutionSampleTestDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:util="clr-namespace:NLib.Wpf.Controls.Utils;assembly=NLib.Wpf.Controls"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             xmlns:prop="clr-namespace:M3.QA.Pages"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1200">
    <UserControl.Resources>
        <!--  N INPUT  -->
        <Style x:Key="NInput"
               TargetType="TextBox"
               BasedOn="{StaticResource CommonTextBox}">
            <!--  BINDING  -->
            <Setter Property="Text" Value="{Binding N, StringFormat='{}{0:#,##0.####}', TargetNullValue='', UpdateSourceTrigger=PropertyChanged, FallbackValue='', NotifyOnSourceUpdated=True}" />
            <Setter Property="IsReadOnly" Value="{Binding ReadOnlyN}" />
            <!--  COMMON  -->
            <Setter Property="util:FocusOptions.SelectAll" Value="True" />
            <Setter Property="util:KeyboardOptions.Enabled" Value="True" />
            <Setter Property="util:KeyboardOptions.EnterAsTab" Value="True" />
            <Setter Property="util:KeyboardOptions.LeftRightNavigation" Value="True" />
            <Setter Property="util:KeyboardOptions.UpDownNavigation" Value="True" />
            <Setter Property="Width" Value="120" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
        <!--  R INPUT 1  -->
        <Style x:Key="RInput1"
               TargetType="TextBox"
               BasedOn="{StaticResource CommonTextBox}">
            <!--  BINDING  -->
            <Setter Property="Text" Value="{Binding R1, StringFormat='{}{0:#,##0.####}', TargetNullValue='', UpdateSourceTrigger=PropertyChanged, FallbackValue='', NotifyOnSourceUpdated=True}" />
            <Setter Property="IsReadOnly" Value="{Binding ReadOnlyR1}" />
            <!--  COMMON  -->
            <Setter Property="util:FocusOptions.SelectAll" Value="True" />
            <Setter Property="util:KeyboardOptions.Enabled" Value="True" />
            <Setter Property="util:KeyboardOptions.EnterAsTab" Value="True" />
            <Setter Property="util:KeyboardOptions.LeftRightNavigation" Value="True" />
            <Setter Property="util:KeyboardOptions.UpDownNavigation" Value="True" />
            <Setter Property="Width" Value="120" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
        <!--  R INPUT 2  -->
        <Style x:Key="RInput2"
               TargetType="TextBox"
               BasedOn="{StaticResource CommonTextBox}">
            <!--  BINDING  -->
            <Setter Property="Text" Value="{Binding R2, StringFormat='{}{0:#,##0.####}', TargetNullValue='', UpdateSourceTrigger=PropertyChanged, FallbackValue='', NotifyOnSourceUpdated=True}" />
            <Setter Property="IsReadOnly" Value="{Binding ReadOnlyR2}" />
            <!--  COMMON  -->
            <Setter Property="util:FocusOptions.SelectAll" Value="True" />
            <Setter Property="util:KeyboardOptions.Enabled" Value="True" />
            <Setter Property="util:KeyboardOptions.EnterAsTab" Value="True" />
            <Setter Property="util:KeyboardOptions.LeftRightNavigation" Value="True" />
            <Setter Property="util:KeyboardOptions.UpDownNavigation" Value="True" />
            <Setter Property="Width" Value="120" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
        <!--  AVG  -->
        <Style x:Key="AVG"
               TargetType="TextBox"
               BasedOn="{StaticResource CommonTextBox}">
            <!--  BINDING  -->
            <Setter Property="Text" Value="{Binding Avg, StringFormat='{}{0:#,##0.##}', TargetNullValue=''}" />
            <!--  COMMON  -->
            <Setter Property="util:FocusOptions.SelectAll" Value="True" />
            <Setter Property="util:KeyboardOptions.Enabled" Value="True" />
            <Setter Property="util:KeyboardOptions.EnterAsTab" Value="True" />
            <Setter Property="util:KeyboardOptions.LeftRightNavigation" Value="True" />
            <Setter Property="util:KeyboardOptions.UpDownNavigation" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Width" Value="120" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <page:NPage HeaderText="DIP Solution Test Data">
        <DockPanel LastChildFill="True" Margin="5">
            <!--  BUTTON BARS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <ctrl:FontAwesomeButton x:Name="cmdSave"
                                        DockPanel.Dock="Left"
                                        IconType="Save"
                                        Text="Save"
                                        Click="cmdSave_Click" />
                <ctrl:FontAwesomeButton x:Name="cmdBack"
                                        DockPanel.Dock="Right"
                                        IconType="Home"
                                        Text="Back"
                                        Click="cmdBack_Click" />
                <Grid />
            </DockPanel>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DockPanel LastChildFill="True">
                    <!--  SEARCH/RESULT LINE 1  -->
                    <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                        <StackPanel Orientation="Horizontal">
                            <!--  LOT NO  -->
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="Lot No:" />
                                <TextBox x:Name="txtLotNo"
                                         Width="150"
                                         TextAlignment="Center"
                                         Style="{StaticResource CommonTextBox}"
                                         KeyDown="txtLotNo_KeyDown" />
                            </StackPanel>
                            <!--  DIP SOLUTION  -->
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="DIP Solution:" />
                                <TextBox x:Name="txtDIPSolution"
                                         TextAlignment="Center"
                                         Width="200"
                                         IsReadOnly="True"
                                         Text="{Binding ItemCode, TargetNullValue=''}"
                                         Style="{StaticResource CommonTextBox}" />
                            </StackPanel>
                            <!--  COMPOUND  -->
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="Compound:" />
                                <ComboBox x:Name="cbCompound"
                                          DockPanel.Dock="Left"
                                          DisplayMemberPath="Compound"
                                          Width="200"
                                          SelectionChanged="cbCompound_SelectionChanged" />
                            </StackPanel>
                        </StackPanel>
                        <Grid />
                    </DockPanel>
                    <!--  SEARCH/RESULT LINE 2  -->
                    <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                        <StackPanel Orientation="Horizontal">
                            <!--  START TEST DATE  -->
                            <StackPanel Orientation="Vertical" Margin="2">
                                <TextBlock Text="Date:" />
                                <xctk:DateTimePicker x:Name="txtTestDate"
                                                     Value="{Binding EditDate}"
                                                     Width="200"
                                                     Format="Custom"
                                                     FormatString="dd/MM/yyyy HH:mm"
                                                     AutoCloseCalendar="True"
                                                     AutoCloseCalendarOnTimeSelection="True" />
                            </StackPanel>
                        </StackPanel>
                        <Grid />
                    </DockPanel>
                    <!--  PH/TEMP/VISCOSITY  -->
                    <DockPanel DockPanel.Dock="Top"
                               LastChildFill="True"
                               Margin="0,2,0,0">
                        <!--  PH  -->
                        <Border DockPanel.Dock="Left"
                                BorderThickness="1"
                                BorderBrush="Silver"
                                CornerRadius="2"
                                Margin="0,0,2,2"
                                Padding="2">
                            <StackPanel DataContext="{Binding Ph}"
                                        Orientation="Vertical"
                                        Width="300"
                                        HorizontalAlignment="Center">
                                <!--  CAPTION  -->
                                <Border Background="DarkMagenta"
                                        Margin="0"
                                        Padding="2"
                                        CornerRadius="2">
                                    <TextBlock Text="PH"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold" />
                                </Border>
                                <!--  SPEC  -->
                                <Border Background="LightGoldenrodYellow"
                                        BorderThickness="1"
                                        BorderBrush="Silver"
                                        Margin="0"
                                        Padding="3"
                                        CornerRadius="2">
                                    <StackPanel DataContext="{Binding Spec}"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Spec: "
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding SpecInfo}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                    </StackPanel>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              HorizontalAlignment="Center"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,5,0">
                                                <DockPanel LastChildFill="True">
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR1}"
                                                                       Text="{Binding CaptionR1}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR2}"
                                                                       Text="{Binding CaptionR2}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        <!--  TEMPERATURE  -->
                        <Border DockPanel.Dock="Left"
                                BorderThickness="1"
                                BorderBrush="Silver"
                                CornerRadius="2"
                                Margin="0,0,2,2"
                                Padding="2">
                            <StackPanel DataContext="{Binding Temperature}"
                                        Orientation="Vertical"
                                        Width="300"
                                        HorizontalAlignment="Center">
                                <!--  CAPTION  -->
                                <Border Background="DarkMagenta"
                                        Margin="0"
                                        Padding="3"
                                        CornerRadius="2">
                                    <TextBlock Text="TEMPERATURE (℃)"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold" />
                                </Border>
                                <!--  SPEC  -->
                                <Border Background="LightGoldenrodYellow"
                                        BorderThickness="1"
                                        BorderBrush="Silver"
                                        Margin="0"
                                        Padding="3"
                                        CornerRadius="2">
                                    <StackPanel DataContext="{Binding Spec}"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Spec: "
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding SpecInfo}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                    </StackPanel>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              HorizontalAlignment="Center"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,5,0">
                                                <DockPanel LastChildFill="True">
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR1}"
                                                                       Text="{Binding CaptionR1}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR2}"
                                                                       Text="{Binding CaptionR2}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        <!--  VISCOSITY  -->
                        <Border DockPanel.Dock="Left"
                                BorderThickness="1"
                                BorderBrush="Silver"
                                CornerRadius="2"
                                Margin="0,0,2,2"
                                Padding="2">
                            <StackPanel DataContext="{Binding Viscosity}"
                                        Orientation="Vertical"
                                        Width="300"
                                        HorizontalAlignment="Center">
                                <!--  CAPTION  -->
                                <Border Background="DarkMagenta"
                                        Margin="0"
                                        Padding="3"
                                        CornerRadius="2">
                                    <TextBlock Text="VISCOSITY (Cps)"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold" />
                                </Border>
                                <!--  SPEC  -->
                                <Border Background="LightGoldenrodYellow"
                                        BorderThickness="1"
                                        BorderBrush="Silver"
                                        Margin="0"
                                        Padding="3"
                                        CornerRadius="2">
                                    <StackPanel DataContext="{Binding Spec}"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Spec: "
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding SpecInfo}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold" />
                                    </StackPanel>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              HorizontalAlignment="Center"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,5,0">
                                                <DockPanel LastChildFill="True">
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR1}"
                                                                       Text="{Binding CaptionR1}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR2}"
                                                                       Text="{Binding CaptionR2}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        <Grid />
                    </DockPanel>
                    <!--  TSC  -->
                    <DockPanel LastChildFill="True" DataContext="{Binding TSC}">
                        <!--  TSC CAPTION  -->
                        <Border DockPanel.Dock="Top"
                                BorderThickness="1"
                                BorderBrush="Silver"
                                Background="DarkMagenta"
                                CornerRadius="2"
                                Margin="1"
                                Padding="5">
                            <DockPanel LastChildFill="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center">
                                <Border DockPanel.Dock="Right"
                                        Background="CornflowerBlue"
                                        CornerRadius="2"
                                        Margin="10,2"
                                        Padding="10,3">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="RPU Spec : "
                                                   Foreground="WhiteSmoke"
                                                   FontSize="16"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Spec.SpecInfo}"
                                                   Foreground="WhiteSmoke"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                                <TextBlock Text="TSC %"
                                           TextAlignment="Center"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Center"
                                           Foreground="WhiteSmoke"
                                           FontWeight="SemiBold" />
                            </DockPanel>
                        </Border>
                        <DockPanel LastChildFill="True">
                            <!--  BEAKER W  -->
                            <StackPanel DockPanel.Dock="Left"
                                        DataContext="{Binding BeakerWeight}"
                                        Orientation="Vertical"
                                        Width="300"
                                        Margin="0,0,2,0">
                                <!--  CAPTION  -->
                                <Border BorderThickness="1"
                                        BorderBrush="Silver"
                                        Background="DarkMagenta"
                                        CornerRadius="2"
                                        Margin="0"
                                        Padding="5">
                                    <TextBlock TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold">
                                        <Run Text="BREAKER WT (g)" />
                                        <LineBreak />
                                        <LineBreak />
                                        <Run Text="A" />
                                    </TextBlock>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              Background="Lavender"
                                              HorizontalAlignment="Stretch"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    HorizontalAlignment="Stretch"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,0"
                                                    BorderBrush="Silver"
                                                    BorderThickness="1,0,1,1">
                                                <DockPanel LastChildFill="True" Margin="0,1">
                                                    <Grid Height="5" DockPanel.Dock="Top" />
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR1}"
                                                                       Text="{Binding CaptionR1}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR2}"
                                                                       Text="{Binding CaptionR2}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid Height="10" DockPanel.Dock="Top" />
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <!--  BEAKER W BEFORE HEAT  -->
                            <StackPanel DockPanel.Dock="Left"
                                        DataContext="{Binding BeakerWeightBeforeHeat}"
                                        Orientation="Vertical"
                                        Width="300"
                                        Margin="0,0,2,0">
                                <!--  CAPTION  -->
                                <Border BorderThickness="1"
                                        BorderBrush="Silver"
                                        Background="DarkMagenta"
                                        CornerRadius="2"
                                        Margin="0"
                                        Padding="5">
                                    <TextBlock TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold">
                                        <Run Text="BREAKER WT (g) + " />
                                        <LineBreak />
                                        <Run Text="DIP SOL. BEFORE HEAT (g)" />
                                        <LineBreak />
                                        <Run Text="B" />
                                    </TextBlock>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              Background="FloralWhite"
                                              HorizontalAlignment="Stretch"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    HorizontalAlignment="Stretch"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,0"
                                                    BorderBrush="Silver"
                                                    BorderThickness="1,0,1,1">
                                                <DockPanel LastChildFill="True" Margin="0,1">
                                                    <Grid Height="5" DockPanel.Dock="Top" />
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR1}"
                                                                       Text="{Binding CaptionR1}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR2}"
                                                                       Text="{Binding CaptionR2}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid Height="10" DockPanel.Dock="Top" />
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <!--  BEAKER W AFTER HEAT  -->
                            <StackPanel DockPanel.Dock="Left"
                                        DataContext="{Binding BeakerWeightAfterHeat}"
                                        Orientation="Vertical"
                                        Width="300"
                                        Margin="0,0,2,0">
                                <!--  CAPTION  -->
                                <Border BorderThickness="1"
                                        BorderBrush="Silver"
                                        Background="DarkMagenta"
                                        CornerRadius="2"
                                        Margin="0"
                                        Padding="5">
                                    <TextBlock TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold">
                                        <Run Text="BREAKER WT (g) + " />
                                        <LineBreak />
                                        <Run Text="DIP SOL. AFTER HEAT (g)" />
                                        <LineBreak />
                                        <Run Text="C" />
                                    </TextBlock>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              Background="Cornsilk"
                                              HorizontalAlignment="Stretch"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    HorizontalAlignment="Stretch"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,0"
                                                    BorderBrush="Silver"
                                                    BorderThickness="1,0,1,1">
                                                <DockPanel LastChildFill="True" Margin="0,1">
                                                    <Grid Height="5" DockPanel.Dock="Top" />
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR1}"
                                                                       Text="{Binding CaptionR1}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <TextBlock Height="3" />
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorR2}"
                                                                       Text="{Binding CaptionR2}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid Height="10" DockPanel.Dock="Top" />
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <!--  RPU  -->
                            <StackPanel DataContext="{Binding RPU}"
                                        Orientation="Vertical"
                                        Width="300"
                                        Margin="0,0,2,0">
                                <!--  CAPTION  -->
                                <Border BorderThickness="1"
                                        BorderBrush="Silver"
                                        Background="DarkMagenta"
                                        CornerRadius="2"
                                        Margin="0"
                                        Padding="5">
                                    <TextBlock TextAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Foreground="WhiteSmoke"
                                               FontWeight="SemiBold">
                                        <Run Text="RPU" />
                                        <LineBreak />
                                        <LineBreak />
                                        <Run Text="(C-A)/(B-A) x 100" />
                                    </TextBlock>
                                </Border>
                                <!--  EACH Item N/R  -->
                                <ItemsControl ItemsSource="{Binding Items}"
                                              Focusable="False"
                                              Background="AliceBlue"
                                              HorizontalAlignment="Stretch"
                                              IsEnabled="{Binding EnableTest}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical"
                                                                    HorizontalAlignment="Stretch"
                                                                    VirtualizingPanel.IsVirtualizing="True"
                                                                    VirtualizingPanel.VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,0"
                                                    BorderBrush="Silver"
                                                    BorderThickness="1,0,1,1">
                                                <DockPanel LastChildFill="True" Margin="0,1">
                                                    <Grid Height="5" DockPanel.Dock="Top" />
                                                    <!--  N  -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleN}">
                                                            <TextBlock TextAlignment="Center"
                                                                       Foreground="{Binding ForegroundColorN}"
                                                                       Text="{Binding CaptionN}" />
                                                            <TextBox Style="{StaticResource NInput}" IsReadOnly="True" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                DockPanel.Dock="Top">
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R1  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR1}">
                                                            <CheckBox HorizontalAlignment="Center"
                                                                      HorizontalContentAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      VerticalContentAlignment="Center"
                                                                      Height="25"
                                                                      IsChecked="{Binding R1Flag}"
                                                                      IsThreeState="False"
                                                                      Foreground="{Binding ForegroundColorR1}"
                                                                      Content="{Binding CaptionR1}"
                                                                      Style="{StaticResource CommonCheckBox}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput1}" IsReadOnly="True" />
                                                        </StackPanel>
                                                        <TextBlock Width="5" Visibility="{Binding VisibleR1}" />
                                                        <!--  R2  -->
                                                        <StackPanel Orientation="Vertical" Visibility="{Binding VisibleR2}">
                                                            <CheckBox HorizontalAlignment="Center"
                                                                      HorizontalContentAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      VerticalContentAlignment="Center"
                                                                      Height="25"
                                                                      IsChecked="{Binding R2Flag}"
                                                                      IsThreeState="False"
                                                                      Foreground="{Binding ForegroundColorR2}"
                                                                      Content="{Binding CaptionR2}"
                                                                      Style="{StaticResource CommonCheckBox}" />
                                                            <TextBlock Height="2" />
                                                            <TextBox Style="{StaticResource RInput2}" IsReadOnly="True" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Grid Height="10" DockPanel.Dock="Top" />
                                                    <Grid />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!--  AVG.  -->
                                <Border Margin="0"
                                        BorderBrush="Silver"
                                        BorderThickness="1,0,1,1"
                                        Background="LightYellow"
                                        Padding="5">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                        <Grid Height="5" />
                                        <TextBlock Text="AVG" TextAlignment="Center" />
                                        <TextBox Style="{StaticResource AVG}" />
                                        <Grid Height="5" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <Grid />
                        </DockPanel>
                    </DockPanel>
                    <Grid />
                </DockPanel>
            </ScrollViewer>
        </DockPanel>
    </page:NPage>
</UserControl>
