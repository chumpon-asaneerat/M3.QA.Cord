<UserControl x:Class="M3.QA.Pages.CordSpecificationSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!--#region COLORS-->
        <Color x:Key="PropertyColor1">ForestGreen</Color>
        <Color x:Key="PropertyColor2">WhiteSmoke</Color>
        <!--#endregion-->
        <!--#region TEMPLATES-->

        <!--#endregion-->
    </UserControl.Resources>
    <page:NPage HeaderText="Cord Code Setting">
        <DockPanel LastChildFill="True" Margin="5">
            <!--  BUTTON BARS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <ctrl:FontAwesomeButton x:Name="cmdSave"
                                        DockPanel.Dock="Left"
                                        IconType="Save"
                                        Text="Save"
                                        Click="cmdSave_Click" />
                <ctrl:FontAwesomeButton x:Name="cmdBack"
                                        DockPanel.Dock="Right"
                                        IconType="Home"
                                        Text="Back"
                                        Click="cmdBack_Click" />
                <Grid />
            </DockPanel>
            <!--  FILTER BARS  -->
            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <!--  CORD CODE  -->
                    <ctrl:NComboBox x:Name="cbCordCode"
                                    Margin="0,0,5,0"
                                    CaptionText="Cord Code:"
                                    Width="200"
                                    DisplayMemberPath="ItemCode"
                                    SelectionChanged="cbCordCode_SelectionChanged" />
                </StackPanel>
                <Grid />
            </DockPanel>
            <!--  WORK AREA  -->
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="entry"
                              Focusable="False"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="1"
                                    BorderBrush="Silver"
                                    BorderThickness="0"
                                    Padding="4">
                                <DockPanel LastChildFill="True">
                                    <!--  PROPERTY NO/PROPERTY NAME  -->
                                    <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                                        <Border DockPanel.Dock="Left"
                                                BorderThickness="0"
                                                CornerRadius="5"
                                                Padding="3">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <GradientStop Color="{StaticResource PropertyColor2}" Offset="0" />
                                                    <GradientStop Color="{StaticResource PropertyColor1}" Offset="0.10" />
                                                    <GradientStop Color="{StaticResource PropertyColor1}" Offset="0.90" />
                                                    <GradientStop Color="{StaticResource PropertyColor2}" Offset="1" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding PropertyNo}"
                                                           Foreground="WhiteSmoke"
                                                           Margin="2,0"
                                                           TextAlignment="Right"
                                                           Width="20" />
                                                <TextBlock Text="{Binding PropertyName}"
                                                           Foreground="WhiteSmoke"
                                                           Margin="2,0"
                                                           TextAlignment="Left"
                                                           Width="180" />
                                            </StackPanel>
                                        </Border>
                                        <Grid />
                                    </DockPanel>
                                    <!--  ENTRY  -->
                                    <Border BorderBrush="Silver"
                                            BorderThickness="0.5"
                                            Padding="3">
                                        <DockPanel LastChildFill="True">
                                            <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                                                <TextBlock Text="No of sample:" Margin="2,0" />
                                                <TextBox Text="{Binding NoSample}"
                                                         Margin="2,0"
                                                         Style="{StaticResource CommonTextBox}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                                                <TextBlock Text="Spec. Type:" Margin="2,0" />
                                                <ComboBox ItemsSource="{Binding SpecTypes}"
                                                          Margin="2,0"
                                                          DisplayMemberPath="SpecDesc"
                                                          Width="200"
                                                          Style="{StaticResource CommonComboBox}" />
                                            </StackPanel>
                                            <Grid />
                                        </DockPanel>
                                    </Border>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </page:NPage>
</UserControl>
