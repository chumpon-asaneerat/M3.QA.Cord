<UserControl x:Class="M3.QA.Pages.CordSpecificationSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!--#region LISTVIEW COLUMN DATA TEMPLATES-->

        <!--#endregion-->
    </UserControl.Resources>
    <page:NPage HeaderText="Cord Code Setting">
        <DockPanel LastChildFill="True" Margin="5">
            <!--  BUTTON BARS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <ctrl:FontAwesomeButton x:Name="cmdSave"
                                        DockPanel.Dock="Left"
                                        IconType="Save"
                                        Text="Save"
                                        Click="cmdSave_Click"/>
                <ctrl:FontAwesomeButton x:Name="cmdBack"
                                        DockPanel.Dock="Right"
                                        IconType="Home"
                                        Text="Back"
                                        Click="cmdBack_Click"/>
                <Grid />
            </DockPanel>
            <!--  FILTER BARS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <!--  CORD CODE  -->
                    <ctrl:NComboBox x:Name="cbCordCode"
                                    Margin="0,0,5,0"
                                    CaptionText="Cord Code:"
                                    Width="200"
                                    DisplayMemberPath="ItemCode"
                                    SelectionChanged="cbCordCode_SelectionChanged"/>
                </StackPanel>
                <Grid />
            </DockPanel>
            <!--  WORK AREA  -->
            <Grid />
        </DockPanel>
    </page:NPage>
</UserControl>
