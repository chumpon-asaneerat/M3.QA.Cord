<UserControl x:Class="M3.QA.Pages.CordElongationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <page:NPage HeaderText="Elongation"
                HeaderBackground="Orange"
                HeaderBorderBrush="Orange">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl MinHeight="100"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          ItemsSource="{Binding Elongations}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <!--  SP No.  -->
                            <Border Margin="2"
                                    Padding="3"
                                    DockPanel.Dock="Left">
                                <StackPanel Orientation="Vertical" Width="100">
                                    <TextBlock Text="Spindle No" TextAlignment="Center" />
                                    <TextBox Text="{Binding SPNo, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                             IsReadOnly="True"
                                             TextAlignment="Center"
                                             Width="90"
                                             Style="{StaticResource CommonTextBox}" />
                                </StackPanel>
                            </Border>
                            <!--  BREAK/LOAD WITH ELONGNO  -->
                            <ItemsControl ItemsSource="{Binding SubProperties}" DockPanel.Dock="Left">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel Orientation="Vertical"
                                                                VirtualizingPanel.IsVirtualizing="True"
                                                                VirtualizingPanel.VirtualizationMode="Recycling" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" Padding="3">
                                            <DockPanel LastChildFill="True">
                                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                                    <TextBlock TextAlignment="Right" Text="{Binding PropertyText}" />
                                                    <TextBox Text="{Binding ELongLoadN, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}"
                                                             Margin="5,0"
                                                             Visibility="{Binding ShowEload}"
                                                             Width="90"
                                                             TextAlignment="Center"
                                                             Style="{StaticResource CommonTextBox}" />
                                                </StackPanel>
                                                <Grid />
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
