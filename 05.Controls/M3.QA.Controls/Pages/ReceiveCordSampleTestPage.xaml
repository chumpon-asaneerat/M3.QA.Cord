<UserControl x:Class="M3.QA.Pages.ReceiveCordSampleTestPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:NLib.Wpf.Controls;assembly=NLib.Wpf.Controls"
             xmlns:page="clr-namespace:NLib.Wpf.Pages;assembly=NLib.Wpf.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1000">
    <page:NPage HeaderText="Receive Cord Test Sample">
        <DockPanel LastChildFill="True" Margin="5">
            <!--  BUTTON BARS  -->
            <DockPanel LastChildFill="True"
                       DockPanel.Dock="Bottom"
                       Height="40">
                <ctrl:FontAwesomeButton x:Name="cmdCancel"
                                        DockPanel.Dock="Left"
                                        IconType="Save"
                                        Text="Save" 
                                        Click="cmdSave_Click"/>
                <ctrl:FontAwesomeButton x:Name="cmdBack"
                                        DockPanel.Dock="Right"
                                        IconType="Home"
                                        Text="Back" 
                                        Click="cmdBack_Click"/>
                <Grid />
            </DockPanel>
            <!--  WORK AREA  -->
            <DockPanel LastChildFill="True">
                <DockPanel DockPanel.Dock="Top">
                    <!--  LOT NO  -->
                    <ctrl:NTextBox x:Name="txtLotNo"
                                   CaptionText="Lot No:"
                                   DockPanel.Dock="Left"
                                   Text=""
                                   Width="200" />
                    <!--  CUSTOMER  -->
                    <ctrl:NComboBox x:Name="cbCustomers"
                                    DockPanel.Dock="Left"
                                    CaptionText="Customer:"
                                    DisplayMemberPath="Customer"
                                    Width="250"
                                    SelectionChanged="cbCustomers_SelectionChanged" />
                    <!--  CORD CODE  -->
                    <ctrl:NComboBox x:Name="cbCodes"
                                    DockPanel.Dock="Left"
                                    CaptionText="Cord Code:"
                                    DisplayMemberPath="ItemCode"
                                    Width="200"
                                    SelectionChanged="cbCodes_SelectionChanged" />
                    <!--  RECEIVE DATE  -->
                    <ctrl:NInputGroup CaptionText="Receive Date/Time:"
                                      DockPanel.Dock="Left"
                                      Width="250">
                        <xctk:DateTimePicker x:Name="dtRecv"
                                             Format="Custom"
                                             FormatString="dd/MM/yyyy HH:mm" />
                    </ctrl:NInputGroup>
                    <Grid />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!--  PRODUCT TYPE  -->
                        <TextBlock Text="Product Type:"
                                   DockPanel.Dock="Top"
                                   Margin="5"
                                   VerticalAlignment="Bottom"
                                   FontWeight="SemiBold"
                                   FontSize="24" />
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Bottom"
                                    Margin="5,0">
                            <RadioButton x:Name="rbTwist"
                                         Margin="5"
                                         FontSize="22"
                                         FontWeight="SemiBold"
                                         Content="Twist"
                                         GroupName="ProductTypes"
                                         Style="{StaticResource CommonRadioButton}" />
                            <RadioButton x:Name="rbDIP"
                                         Margin="5"
                                         FontSize="22"
                                         FontWeight="SemiBold"
                                         Content="DIP"
                                         GroupName="ProductTypes"
                                         VerticalAlignment="Bottom"
                                         VerticalContentAlignment="Bottom"
                                         Style="{StaticResource CommonRadioButton}" />
                        </StackPanel>
                        <!--  CUSTOMER  -->
                        <ctrl:NComboBox x:Name="cbDIPMC"
                                        DockPanel.Dock="Left"
                                        CaptionText="Select M/C:"
                                        DisplayMemberPath="MCName"
                                        Width="250" />
                    </StackPanel>
                    <Grid />
                </DockPanel>
                <Grid />
            </DockPanel>
        </DockPanel>
    </page:NPage>
</UserControl>
